# AnythingLLM Configuration
# Copy this file to .env.local and update with your actual values

# AnythingLLM base URL (local server)
VITE_ANYTHINGLLM_URL=http://localhost:3001

# AnythingLLM API Key
# Generate this in AnythingLLM Settings â†’ API Keys
VITE_ANYTHINGLLM_API_KEY=

# AnythingLLM Workspace Slug
# The workspace containing Canadian insurance product documentation
VITE_ANYTHINGLLM_WORKSPACE=finbox

# AI Response Style (concise | detailed | step-by-step)
VITE_ANYTHINGLLM_RESPONSE_STYLE=concise

# Enable citations in AI responses (true | false)
VITE_ANYTHINGLLM_CITATIONS=true

# Training Documents Folder Path
# Path to core training documents that sync to AnythingLLM
VITE_TRAINING_FOLDER_PATH=./training-docs/core
